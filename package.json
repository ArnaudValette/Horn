{
  "name": "horn",
  "version": "1.0.0",
  "description": "A small utility package to convert org files into preact app.",
  "main": "index.js",
    "files":[
        "build",
        "src/**/*.d.ts"
    ],
  "scripts": {
    "ts-defs": "copyfiles -u 1 \"src/**/*.d.ts\" build",
    "build": "tsc",
    "start": "npx ts-node ./src/index.ts",
    "start:dev": "npx nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "valettearnaud",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.4.5",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
