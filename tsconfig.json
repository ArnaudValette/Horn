{
    "files":["src/types/global.d.ts", "src/parser/ParsableString.ts", "src/horn/HornNode.ts"],
      "include": ["node_modules/@types","src/**/*"] ,
      "exclude": ["**/*.spec.ts", "out"],
  "compilerOptions": {

    "target": "es6",                                  
    "lib": ["es6"],                                  
    "module": "commonjs",                           
    "rootDir": "src",                              
     "moduleResolution": "node",                  
    "baseUrl": ".",                             
      "paths": {"*": ["node_modules/*","src/types/*.d.ts", "src/**/*"]},                                      
      "typeRoots": ["node_modules/@types", "src/types"],                                  
    "types": ["node"],                                      
    "resolveJsonModule": true,                           

    "allowJs": true,                                    

    "outDir": "build",                                 
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                 
    "noImplicitAny": true,                         
    "skipLibCheck": true                          
  }
}
