{
    "include": ["node_modules/@types","src/**/*.ts", "src/**/*.d.ts"] ,
      "exclude": ["**/*.spec.ts", "out"],
  "compilerOptions": {

    "target": "es6",                                  
    "lib": ["es6"],                                  
    "module": "commonjs",                           
    "rootDir": "src",                              
     "moduleResolution": "node",                  
    "baseUrl": ".",                             
      "paths": {"*": ["node_modules/*", "src/*"]},                                      
    "types": ["node"],                                      
    "resolveJsonModule": true,                           
    "declaration": true,

    "allowJs": true,                                    

    "outDir": "build",                                 
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                 
    "noImplicitAny": true,                         
    "skipLibCheck": true                          
  }
}
